//we can input matrix using the function x_matrix("enter a matrix", zeros(row,column));
x = x_matrix("enter the matrix x", zeros(1,input("enter the count of x")));
h = x_matrix("enter the matrix h", zeros(1, input("enter the count of h")));
len_x = length(x);
len_h = length(h);
len_y = len_x + len_h - 1;
y = [];
for k = 1:len_y
    count = 0;
    for j = max(1,k+1-len_h):min(k,len_x)
        count = count + x(j)*h(k-j+1);
    end
    y(k) = count;
end
